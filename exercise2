//frizz and buzz
#include<iostream>
using namespace std;

int main()
{
	int x;
	for(x=1;x<100;x++)
	{
	if (x%5==0 && x%3==0)
	{
		
		cout<<"FizzBuzz"<<endl;	
	}
	else if(x%5==0)
	{
		cout<<"Buzz"<<endl;	
	}
	else if (x%3==0)
	{
		cout<<"Fizz"<<endl;
	}
	else
	{
		cout<<x<<endl;
	}

	}
}

